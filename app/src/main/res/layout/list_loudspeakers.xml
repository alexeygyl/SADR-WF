<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/LSCanal"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
         >
    </TextView>


    <TextView
        android:id="@+id/LSName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40px"
        android:singleLine="true"
        android:textSize="23px" >
    </TextView>
    <TextView
        android:id="@+id/LSip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LSName"
        android:layout_marginLeft="40px"
        android:textSize="16px"
        >
    </TextView>
    <TextView
        android:id="@+id/Labelstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LSip"
        android:layout_marginLeft="40px"
        android:textSize="16px"
        android:text="status "
        >
    </TextView>
    <ImageView
        android:layout_marginTop="5px"
        android:layout_marginLeft="5px"
        android:id="@+id/LSstatus"
        android:layout_width="15px"
        android:layout_height="15px"
        android:layout_below="@id/LSip"
        android:layout_toRightOf="@+id/Labelstatus"
        >
    </ImageView>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startStopLS"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/LSName"
        android:layout_toEndOf="@+id/LSName"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="false"
        />

</RelativeLayout>


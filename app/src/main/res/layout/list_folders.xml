<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/FolderLogo"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="10px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/folder_blue_8483" >
    </ImageView>


    <TextView
        android:id="@+id/FolderPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="140px"
        android:layout_marginTop="11px"
        android:singleLine="true"
        android:textSize="23px" >
    </TextView>
    <TextView
        android:id="@+id/FolderItemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FolderPath"
        android:layout_marginLeft="140px"
        android:textSize="16px">
    </TextView>
    <TextView
        android:id="@+id/FolderTmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="14px"
        android:textSize="20px">
    </TextView>

</RelativeLayout>
